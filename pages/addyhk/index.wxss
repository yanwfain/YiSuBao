/* pages/addyhk/index.wxss */
page{
  background: #F8F8F8;
}
.tab{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FAFAFA;
}
.cont_lsit{
  width: 30%;
  font-size: 32rpx;
  color: #666666;
  text-align: center;
  border-bottom: 2rpx solid #FAFAFA;
  padding: 20rpx;
}
.active{
  color: #0582FC;
  border-bottom: 2rpx solid #0582FC;
}
.list{
  padding: 30rpx;
  background: white;
  border-bottom:2rpx solid #F8F8F8;
  display: flex;
  justify-content: space-between;
  align-items: center;

}
.right{
  width: 64%;
  font-size: 28rpx;
  text-align: right;
}
.submit{
  width: 80%;
  margin: 0 auto;
  margin-top:150rpx;
  border-radius: 14rpx;
  background: #0582FC;
  text-align: center;
  line-height: 90rpx;
  height: 90rpx;
  color: white;
}
.titl_an {
  width: 90%;
  margin: 0 auto;
  padding: 10rpx 0;
  font-size: 34rpx;
  font-weight: 600;
}
.pages {
  width: 98%;
  margin: auto;
  overflow: hidden;
}

.top {
  width: 100%;
  overflow: hidden;
  margin: auto;
  font-size: 50rpx;
  background-color: white;
  border-left: 8rpx solid rgb(9, 245, 60);
  border-bottom: 1rpx solid rgba(117, 116, 116, 0.527);
}

.top_name {
  margin-left: 20rpx;
}

/* 图片 */

.images_box {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}

.img-box {
  border: 5rpx;
  /* border-style: solid;
  border-color: rgba(0, 0, 0, 0.452); */
  width: 170rpx;
  height: 170rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

/* 删除图片 */

.img-delect {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}

.img {
  width: 100%;
  height: 100%;
}

.jiage {
  height: 60rpx;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: white;
  display: flex;
  justify-content: flex-start;
}

.rmb {
  width: 280rpx;
  border: 2rpx solid rgb(199, 197, 197);
}

button {
  margin-top: 20rpx;
  background-color: green;
}